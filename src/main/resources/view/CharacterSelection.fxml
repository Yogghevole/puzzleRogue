<?xml version="1.0" encoding="UTF-8"?>

<!-- Screen for selecting a character before starting a new game. -->

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="view.controller.CharacterSelectionController"
      alignment="CENTER" 
      spacing="24.0"
      prefWidth="800.0" 
      prefHeight="600.0"
      style="-fx-background-color: #1a1a1a;">
    
    <padding>
        <Insets top="32.0" bottom="32.0" left="32.0" right="32.0"/>
    </padding>
    
    <Label text="Choose Your Hero" 
           style="-fx-text-fill: #FFFFFF; -fx-font-size: 32px; -fx-font-weight: bold;">
        <font>
            <Font name="Roboto Bold" size="32.0"/>
        </font>
    </Label>
    
    <HBox fx:id="charactersContainer" 
          alignment="CENTER" 
          spacing="20.0"
          VBox.vgrow="ALWAYS">
    </HBox>
    
    <HBox alignment="CENTER" spacing="20.0">
        <Button fx:id="backButton" 
                text="Back" 
                prefWidth="120.0" 
                prefHeight="40.0"
                style="-fx-background-radius: 8; -fx-background-color: #666666; -fx-text-fill: #FFFFFF;"
                styleClass="menu-button">
            <font>
                <Font name="Roboto Medium" size="16.0"/>
            </font>
        </Button>
        
        <Button fx:id="startButton" 
                text="Start Expedition" 
                prefWidth="180.0" 
                prefHeight="40.0"
                style="-fx-background-radius: 8; -fx-background-color: #4CAF50; -fx-text-fill: #FFFFFF;"
                styleClass="menu-button"
                disable="true">
            <font>
                <Font name="Roboto Medium" size="16.0"/>
            </font>
        </Button>
    </HBox>
    
    <stylesheets>
        <String fx:value="/style.css"/>
    </stylesheets>
    
</VBox>