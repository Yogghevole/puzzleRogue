<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<VBox fx:id="mainContainer"
      xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="view.controller.HomeScreenController"
      alignment="CENTER" 
      spacing="20.0"
      prefWidth="800.0" prefHeight="600.0">
    
    <HBox alignment="TOP_LEFT">
        <ImageView fx:id="settingsIcon" fitWidth="48.0" fitHeight="48.0"/>
    </HBox>
    
    <Region VBox.vgrow="ALWAYS"/>
    
    <VBox alignment="CENTER" spacing="12.0">
        <Button fx:id="continueButton" text="Continue Expedition"/>
        <Button fx:id="newExpeditionButton" text="New Expedition"/>
        <Button fx:id="reliquaryButton" text="The Reliquary"/>
    </VBox>
    
    <Region VBox.vgrow="ALWAYS"/>
    
</VBox>