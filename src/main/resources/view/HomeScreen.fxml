<?xml version="1.0" encoding="UTF-8"?>

<!-- Main menu screen with options to start, continue, or view records. -->

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<AnchorPane xmlns="http://javafx.com/javafx/17" 
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="view.controller.HomeScreenController"
          prefWidth="800.0" prefHeight="600.0">
    
    <children>
        <StackPane fx:id="mainContainer" 
              AnchorPane.topAnchor="0.0" 
              AnchorPane.bottomAnchor="0.0" 
              AnchorPane.leftAnchor="0.0" 
              AnchorPane.rightAnchor="0.0">
            
            <HBox alignment="TOP_RIGHT" spacing="0" StackPane.alignment="TOP_RIGHT" pickOnBounds="false">
                <padding>
                    <Insets top="20.0" left="0.0" bottom="0.0" right="30.0"/>
                </padding>
                
                <VBox alignment="TOP_RIGHT" spacing="4.0">
                     <HBox alignment="CENTER_RIGHT" spacing="30.0">
                        <VBox alignment="CENTER_RIGHT" spacing="2.0">
                            <Label fx:id="nickLabel" text="Player" styleClass="user-nick-label"/>
                            <Label fx:id="pointsLabel" text="0 pts" styleClass="user-points-label"/>
                        </VBox>
                        <ImageView fx:id="settingsIcon" fitWidth="48.0" fitHeight="48.0" styleClass="settings-icon">
                            <image>
                                <Image url="@../assets/icons/utils/settings.png"/>
                            </image>
                        </ImageView>
                     </HBox>
                </VBox>
            </HBox>
            
            <VBox alignment="CENTER" spacing="25.0" StackPane.alignment="CENTER" pickOnBounds="false">
                
                <ImageView fx:id="continueButton" 
                       fitWidth="320.0" 
                       preserveRatio="true"
                       pickOnBounds="true"
                       styleClass="menu-button-image">
                    <image>
                        <Image url="@../assets/menu/continue_expedition.png"/>
                    </image>
                </ImageView>
                
                <ImageView fx:id="newExpeditionButton" 
                       fitWidth="320.0" 
                       preserveRatio="true"
                       pickOnBounds="true"
                       styleClass="menu-button-image">
                    <image>
                        <Image url="@../assets/menu/new_expedition.png"/>
                    </image>
                </ImageView>
                
                <ImageView fx:id="reliquaryButton" 
                       fitWidth="320.0" 
                       preserveRatio="true"
                       pickOnBounds="true"
                       styleClass="menu-button-image">
                    <image>
                        <Image url="@../assets/menu/the_reliquary.png"/>
                    </image>
                </ImageView>
                
            </VBox>
            
        </StackPane>
        <StackPane fx:id="optionsModalContainer" visible="false" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
    </children>
</AnchorPane>