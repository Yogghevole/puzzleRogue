<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<AnchorPane xmlns="http://javafx.com/javafx/17" 
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="view.controller.HomeScreenController"
          prefWidth="800.0" prefHeight="600.0">
    
    <children>
        <!-- Container principale con sfondo -->
        <VBox fx:id="mainContainer" 
              alignment="CENTER" 
              spacing="24.0"
              AnchorPane.topAnchor="0.0" 
              AnchorPane.bottomAnchor="0.0" 
              AnchorPane.leftAnchor="0.0" 
              AnchorPane.rightAnchor="0.0">
            
            <!-- Settings Icon in alto a sinistra -->
            <HBox alignment="TOP_RIGHT" spacing="0">
                <padding>
                    <Insets top="16.0" left="0.0" bottom="0.0" right="16.0"/>
                </padding>
                <ImageView fx:id="settingsIcon" fitWidth="48.0" fitHeight="48.0" styleClass="settings-icon">
                    <image>
                        <Image url="@../assets/icons/utils/settings.png"/>
                    </image>
                </ImageView>
            </HBox>
            
            <!-- Spacer per centrare verticalmente i pulsanti -->
            <Region VBox.vgrow="ALWAYS"/>
            
            <!-- Container per i pulsanti principali -->
            <VBox alignment="CENTER" spacing="12.0">
                
                <!-- Continue Expedition Button -->
                <Button fx:id="continueButton" 
                       text="Venture Forth" 
                       prefWidth="280.0" 
                       prefHeight="60.0"
                       style="-fx-background-radius: 8; -fx-background-color: #4CAF50; -fx-text-fill: #FFFFFF;"
                       styleClass="menu-button">
                    <font>
                        <Font name="Roboto Medium" size="18.0"/>
                    </font>
                </Button>
                
                <!-- New Expedition Button -->
                <Button fx:id="newExpeditionButton" 
                       text="New Expedition" 
                       prefWidth="280.0" 
                       prefHeight="60.0"
                       style="-fx-background-radius: 8; -fx-background-color: #2196F3; -fx-text-fill: #FFFFFF;"
                       styleClass="menu-button">
                    <font>
                        <Font name="Roboto Medium" size="18.0"/>
                    </font>
                </Button>
                
                <!-- The Reliquary Button -->
                <Button fx:id="reliquaryButton" 
                       text="The Ancestor's Legacy" 
                       prefWidth="280.0" 
                       prefHeight="60.0"
                       style="-fx-background-radius: 8; -fx-background-color: #FF9800; -fx-text-fill: #FFFFFF;"
                       styleClass="menu-button">
                    <font>
                        <Font name="Roboto Medium" size="18.0"/>
                    </font>
                </Button>
                
            </VBox>
            
            <!-- Spacer inferiore -->
            <Region VBox.vgrow="ALWAYS"/>
            
        </VBox>
        <StackPane fx:id="optionsModalContainer" visible="false" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
    </children>
    
    
    
</AnchorPane>